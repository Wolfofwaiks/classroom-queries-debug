<h1>List of all students</h1>
<hr>
<form action="/insert_student" method="post">
  <div>
    <label for="email_box">Email</label>
    <input type="email" id="email_box" name="query_email" required>
  </div>
  <div>
    <label for="first_name_box">First name</label>
    <input type="text" id="first_name_box" name="query_first_name" required>
  </div>
  <div>
    <label for="last_name_box">Last name</label>
    <input type="text" id="last_name_box" name="query_last_name" required>
  </div>
  <button>Create student</button>
</form>
<hr>
<table class="table" border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.email %></td>
        <td>
          <a href="/students/<%= student.id %>">Show details</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
